@model Entities.DTOs.CustomerLoginDto

@{
    ViewData["Title"] = "Giriş Ekranı";
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h3 class="card-title text-center">@ViewData["Title"]</h3>
                    <hr />
                    <form asp-action="Login" id="login-form" method="post">

                        <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Mail..." />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" class="form-control" type="password" placeholder="P@ssW0rd!" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <input type="hidden" name="Role" />

                        <div class="form-group d-grid mb-3">
                            @* d-grid butonun bulunduğu dive yayılmasını sağlar*@
                            <button type="submit" class="btn btn-primary d-block"><i class="fa-solid fa-right-to-bracket me-2"></i>Giriş Yap</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>

    <script>

    $(document).ready(function () {
        $('#login-form').submit(function (event) {
            event.preventDefault(); // sayfa yenilenmesini önlemek için formun varsayılan davranışını iptal eder

            var formData = {
                'Email': $('input[name=Email]').val(),
                'Password': $('input[name=Password]').val(),
                    'Role': $('input[name=Role]').val(),
            };
           // console.log(formData);

            $.ajax({
                type: 'POST',
                url: '/Customer/Login',
                data: JSON.stringify(formData),
                contentType: 'application/json',  //Gönderilen verinin türünü actiona belirtir
                dataType: 'json',     //Json tipinde sonuç döner
            })
            .done(function (data) {
                if (data!=null) {
                    var cookieString = "token=" + data.customerdb.token; //token; çerez olarak kaydedilir // çerezin temel formatı bu şekilde yazılır.
                    document.cookie = cookieString
                    alert('Giriş başarılı!');
                } else {
                    alert('Giriş başarısız. Lütfen tekrar deneyin.');
                }
            })
            .fail(function (data) {
                alert('Sunucu hatası. Lütfen daha sonra tekrar deneyin.');
            });
                //.fail() yöntemi, AJAX isteği başarısız olduğunda çalışan bir jQuery yöntemidir.
        });
    });
    </script>
}



