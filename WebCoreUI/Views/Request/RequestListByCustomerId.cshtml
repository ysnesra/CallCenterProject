@model List<Entities.DTOs.RequestListByCustomerDto>

@{
    ViewData["Title"] = "Request";
}

<div class="container">
    <div class="row mt-3 mb-3">
        <div class="col-12 text-center">
            <h1 class="display-4">TALEPLERİM</h1>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <a asp-action="RequestCreate" asp-controller="Request" class="btn btn-primary">
                <i class="fa-sharp fa-solid fa-cart-plus"></i>
                Talep Ekle
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Talep Tarihleri</th>
                        <th>Talep</th>
                        <th>Talep Türü</th>
                        <th>Durum</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CreateDate.ToString("dd MMMM yyyy")</td>
                            <td>@item.Description</td>
                            <td>@item.RequestTypeName</td>
                            <td>@item.StatusName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
